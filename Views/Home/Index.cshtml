@section Scripts {
    @inject Microsoft.Extensions.Configuration.IConfiguration Configuration

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const homeLoginModal = document.getElementById('homeLoginModal');
            if (homeLoginModal) {
                homeLoginModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const bookId = button.getAttribute('data-book-id');
                    const bookTitle = button.getAttribute('data-book-title');

                    const modalTitle = document.getElementById('home-modal-book-title');
                    const loginLink = document.getElementById('home-modal-login-link');
                    const registerLink = document.getElementById('home-modal-register-link');

                    if (modalTitle && bookTitle) {
                        modalTitle.textContent = `Ready to read "${bookTitle}"?`;
                    }

                    if (loginLink && bookId) {
                        const returnUrl = encodeURIComponent(`/Books/ViewDetails/${bookId}`);
                        loginLink.href = `/Auth/Login?returnUrl=${returnUrl}`;
                    }

                    if (registerLink && bookId) {
                        const returnUrl = encodeURIComponent(`/Books/ViewDetails/${bookId}`);
                        registerLink.href = `/Auth/Register?returnUrl=${returnUrl}`;
                    }
                });
            }
        });
    </script>

    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=@(Environment.GetEnvironmentVariable("GOOGLE_MAPS_API_KEY") ?? Configuration["GoogleMaps:ApiKey"])&libraries=places"></script>

    <script>
        let map;
        let service;
        let infowindow;
        let markers = [];
        let userLocation;
        let userLocationMarker;
        let mapInitialized = false;
        let isSearchingThisArea = false;

        // Initialize map button
        document.getElementById('init-map-btn').addEventListener('click', function() {
            initializeMapAndSearch();
        });

        // Search this area button
        document.getElementById('search-this-area-btn').addEventListener('click', function() {
            const center = map.getCenter();
            const searchLocation = {
                lat: center.lat(),
                lng: center.lng()
            };
            isSearchingThisArea = true;
            searchPlaces(searchLocation);
        });

        // Recenter button
        document.getElementById('recenter-btn').addEventListener('click', function() {
            if (userLocation && map) {
                map.setCenter(userLocation);
                map.setZoom(14);
                isSearchingThisArea = false;
                searchPlaces(userLocation);
            }
        });

        // Search type change
        document.querySelectorAll('input[name="search-type"]').forEach(radio => {
            radio.addEventListener('change', function() {
                if (mapInitialized) {
                    const center = map.getCenter();
                    const searchLocation = {
                        lat: center.lat(),
                        lng: center.lng()
                    };
                    searchPlaces(searchLocation);
                }
            });
        });

        function initializeMapAndSearch() {
            showStatus('Detecting your location...', 'info');

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        userLocation = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };

                        // Hide init button and placeholder
                        document.getElementById('init-map-btn').style.display = 'none';
                        document.getElementById('map-placeholder').style.display = 'none';
                        document.getElementById('map').style.display = 'block';
                        document.getElementById('search-this-area-btn').style.display = 'block';
                        document.getElementById('recenter-btn').style.display = 'block';
                        document.getElementById('search-type-container').style.display = 'block';

                        // Initialize map
                        initMap(userLocation);
                        mapInitialized = true;

                        // Automatically search for places
                        showStatus('Searching for libraries and bookstores...', 'info');
                        searchPlaces(userLocation);
                    },
                    function(error) {
                        handleGeolocationError(error);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 0
                    }
                );
            } else {
                showStatus('Geolocation is not supported by your browser.', 'danger');
            }
        }

        function handleGeolocationError(error) {
            let errorMessage = '';
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    errorMessage = 'Location permission denied. Please enable location access in your browser settings.';
                    break;
                case error.POSITION_UNAVAILABLE:
                    errorMessage = 'Location information unavailable. Please try again.';
                    break;
                case error.TIMEOUT:
                    errorMessage = 'Location request timed out. Please try again.';
                    break;
                default:
                    errorMessage = 'An unknown error occurred while getting your location.';
            }
            showStatus(errorMessage, 'danger');
        }

        function showStatus(message, type) {
            const statusDiv = document.getElementById('location-status');
            statusDiv.style.display = 'block';
            statusDiv.className = `alert alert-${type}`;

            const icon = type === 'info' ? 'fa-spinner fa-spin' :
                        type === 'warning' ? 'fa-exclamation-circle' :
                        type === 'danger' ? 'fa-exclamation-triangle' : 'fa-check-circle';

            statusDiv.innerHTML = `<i class="fas ${icon} me-2"></i>${message}`;
        }

        function initMap(location) {
            map = new google.maps.Map(document.getElementById('map'), {
                center: location,
                zoom: 14,
                mapTypeControl: true,
                mapTypeControlOptions: {
                    style: google.maps.MapTypeControlStyle.HORIZONTAL_BAR,
                    position: google.maps.ControlPosition.TOP_RIGHT
                },
                zoomControl: true,
                zoomControlOptions: {
                    position: google.maps.ControlPosition.RIGHT_CENTER
                },
                streetViewControl: true,
                streetViewControlOptions: {
                    position: google.maps.ControlPosition.RIGHT_CENTER
                },
                fullscreenControl: true,
                styles: [
                    {
                        featureType: 'poi',
                        elementType: 'labels',
                        stylers: [{ visibility: 'off' }]
                    }
                ]
            });

            // Add marker for user location
            userLocationMarker = new google.maps.Marker({
                position: location,
                map: map,
                icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    scale: 10,
                    fillColor: '#4285F4',
                    fillOpacity: 1,
                    strokeColor: '#FFFFFF',
                    strokeWeight: 3
                },
                title: 'Your Location',
                zIndex: 1000
            });

            infowindow = new google.maps.InfoWindow();

            // Add idle event listener to detect when map movement stops
            map.addListener('idle', function() {
                if (mapInitialized && !isSearchingThisArea) {
                    const currentCenter = map.getCenter();
                    const distance = calculateDistance(
                        userLocation,
                        { lat: currentCenter.lat(), lng: currentCenter.lng() }
                    );

                    // If map has moved more than 1km from user location, show search button
                    if (distance > 1) {
                        highlightSearchButton();
                    }
                }
            });

            // Add dragend event to suggest new search
            map.addListener('dragend', function() {
                if (mapInitialized) {
                    highlightSearchButton();
                }
            });
        }

        function highlightSearchButton() {
            const searchBtn = document.getElementById('search-this-area-btn');
            searchBtn.classList.add('btn-pulse');
            setTimeout(() => {
                searchBtn.classList.remove('btn-pulse');
            }, 2000);
        }

        function searchPlaces(location) {
            const searchType = document.querySelector('input[name="search-type"]:checked').value;
            const listDiv = document.getElementById('libraries-list');
            const containerDiv = document.getElementById('libraries-container');

            listDiv.style.display = 'none';
            containerDiv.innerHTML = '';

            // Clear existing markers (except user location)
            markers.forEach(marker => marker.setMap(null));
            markers = [];

            let allResults = [];
            let searchesCompleted = 0;
            let searchesToPerform = [];

            // Determine which searches to perform
            if (searchType === 'both') {
                searchesToPerform = ['library', 'book_store'];
            } else {
                searchesToPerform = [searchType];
            }

            searchesToPerform.forEach(type => {
                const request = {
                    location: location,
                    radius: 3000, // 3km radius
                    type: type
                };

                service = new google.maps.places.PlacesService(map);
                service.nearbySearch(request, function(results, status) {
                    searchesCompleted++;

                    if (status === google.maps.places.PlacesServiceStatus.OK && results) {
                        allResults = allResults.concat(results);
                    }

                    // When all searches are complete
                    if (searchesCompleted === searchesToPerform.length) {
                        handleSearchResults(allResults, location);
                    }
                });
            });
        }

        function handleSearchResults(results, searchLocation) {
            const statusDiv = document.getElementById('location-status');
            const listDiv = document.getElementById('libraries-list');
            const containerDiv = document.getElementById('libraries-container');
            const resultsCount = document.getElementById('results-count');

            if (results.length > 0) {
                statusDiv.style.display = 'none';
                listDiv.style.display = 'block';

                // Remove duplicates based on place_id
                const uniqueResults = Array.from(
                    new Map(results.map(item => [item.place_id, item])).values()
                );

                // Sort by distance from search location
                uniqueResults.sort((a, b) => {
                    const distA = calculateDistance(searchLocation, a.geometry.location);
                    const distB = calculateDistance(searchLocation, b.geometry.location);
                    return distA - distB;
                });

                resultsCount.textContent = uniqueResults.length;

                // Display results (limit to 20)
                const displayResults = uniqueResults.slice(0, 20);
                displayResults.forEach((place, index) => {
                    createMarker(place, index, searchLocation);
                    createListItem(place, index, searchLocation);
                });

                // Adjust map bounds to show all results
                const bounds = new google.maps.LatLngBounds();

                // Include user location if not searching another area
                if (!isSearchingThisArea && userLocation) {
                    bounds.extend(userLocation);
                }

                displayResults.forEach(place => {
                    bounds.extend(place.geometry.location);
                });

                map.fitBounds(bounds);

                // Add padding to bounds
                setTimeout(() => {
                    const currentZoom = map.getZoom();
                    if (currentZoom > 15) {
                        map.setZoom(15);
                    }
                }, 100);

            } else {
                showStatus('No libraries or bookstores found in this area. Try moving the map to a different location.', 'warning');
                listDiv.style.display = 'none';
            }

            isSearchingThisArea = false;
        }

        function createMarker(place, index, searchLocation) {
            // Determine marker color based on type
            const isLibrary = place.types.includes('library');
            const markerColor = isLibrary ? '#7A4E2B' : '#C89B6D';

            const marker = new google.maps.Marker({
                map: map,
                position: place.geometry.location,
                title: place.name,
                label: {
                    text: (index + 1).toString(),
                    color: 'white',
                    fontSize: '11px',
                    fontWeight: 'bold'
                },
                icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    scale: 14,
                    fillColor: markerColor,
                    fillOpacity: 1,
                    strokeColor: '#FFFFFF',
                    strokeWeight: 2
                },
                animation: google.maps.Animation.DROP
            });

            marker.addListener('click', function() {
                const placeType = place.types.includes('library') ?
                    '<span class="badge bg-primary">Library</span>' :
                    '<span class="badge bg-success">Bookstore</span>';

                const distance = calculateDistance(searchLocation, place.geometry.location);

                const content = `
                    <div style="max-width: 280px;">
                        <h6 class="fw-bold mb-2">${place.name}</h6>
                        <div class="mb-2">${placeType}</div>
                        <p class="mb-1 small"><i class="fas fa-map-marker-alt me-1"></i>${place.vicinity}</p>
                        <p class="mb-1 small"><i class="fas fa-route me-1"></i>${distance.toFixed(2)} km away</p>
                        ${place.rating ? `<p class="mb-1 small"><i class="fas fa-star text-warning me-1"></i>${place.rating} (${place.user_ratings_total || 0} reviews)</p>` : ''}
                        ${place.opening_hours ? `<p class="mb-0 small"><i class="fas fa-clock me-1"></i>${place.opening_hours.open_now ? '<span class="text-success fw-semibold">Open now</span>' : '<span class="text-danger">Closed</span>'}</p>` : ''}
                    </div>
                `;
                infowindow.setContent(content);
                infowindow.open(map, marker);

                // Highlight corresponding list item
                document.querySelectorAll('.library-item').forEach(item => item.classList.remove('active'));
                const listItem = document.getElementById(`library-${index}`);
                if (listItem) {
                    listItem.classList.add('active');
                    listItem.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            });

            markers.push(marker);
        }

        function createListItem(place, index, searchLocation) {
            const container = document.getElementById('libraries-container');
            const distance = calculateDistance(searchLocation, place.geometry.location);
            const isLibrary = place.types.includes('library');
            const typeIcon = isLibrary ? 'fa-book' : 'fa-store';
            const typeBadge = isLibrary ?
                '<span class="badge bg-primary me-1">Library</span>' :
                '<span class="badge bg-success me-1">Bookstore</span>';

            const item = document.createElement('div');
            item.className = 'library-item';
            item.id = `library-${index}`;
            item.innerHTML = `
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-1">
                            <span class="library-number me-2">${index + 1}.</span>
                            ${typeBadge}
                        </div>
                        <div class="library-name">${place.name}</div>
                        <div class="library-address"><i class="fas fa-map-marker-alt me-1"></i>${place.vicinity}</div>
                        ${place.rating ? `<div class="library-rating mt-1"><i class="fas fa-star"></i> ${place.rating} (${place.user_ratings_total || 0})</div>` : ''}
                        ${place.opening_hours ? `<div class="library-hours mt-1"><i class="fas fa-clock me-1"></i>${place.opening_hours.open_now ? '<span class="text-success fw-semibold">Open now</span>' : '<span class="text-muted">Closed</span>'}</div>` : ''}
                    </div>
                    <div class="text-end">
                        <div class="library-distance mb-1">${distance.toFixed(2)} km</div>
                        <i class="fas ${typeIcon} text-muted"></i>
                    </div>
                </div>
            `;

            item.addEventListener('click', function() {
                google.maps.event.trigger(markers[index], 'click');
                map.panTo(place.geometry.location);

                setTimeout(() => {
                    if (map.getZoom() < 16) {
                        map.setZoom(16);
                    }
                }, 300);
            });

            container.appendChild(item);
        }

        function calculateDistance(point1, point2) {
            const lat1 = typeof point1.lat === 'function' ? point1.lat() : point1.lat;
            const lng1 = typeof point1.lng === 'function' ? point1.lng() : point1.lng;
            const lat2 = typeof point2.lat === 'function' ? point2.lat() : point2.lat;
            const lng2 = typeof point2.lng === 'function' ? point2.lng() : point2.lng;

            const R = 6371; // Earth's radius in km
            const dLat = toRad(lat2 - lat1);
            const dLng = toRad(lng2 - lng1);

            const a = Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                     Math.cos(toRad(lat1)) * Math.cos(toRad(lat2)) *
                     Math.sin(dLng / 2) * Math.sin(dLng / 2);

            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
            return R * c;
        }

        function toRad(degrees) {
            return degrees * (Math.PI / 180);
        }
    </script>
