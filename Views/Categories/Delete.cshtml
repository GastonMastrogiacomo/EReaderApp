@model EReaderApp.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white bg-danger bg-opacity-10">
        <h5 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Delete Category
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle me-2"></i>
            Are you sure you want to delete this category?
        </div>

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.IdCategory</dd>

            <dt class="col-sm-3">Category Name</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdCategory" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Delete Category
                </button>
            </div>
        </form>
    </div>
</div>