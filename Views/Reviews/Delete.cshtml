@model EReaderApp.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white bg-danger bg-opacity-10">
        <h5 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Delete Review
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle me-2"></i>
            Are you sure you want to delete this review?
        </div>

        <dl class="row">
            <dt class="col-sm-3">Review ID</dt>
            <dd class="col-sm-9">@Model.IdReview</dd>

            <dt class="col-sm-3">Book</dt>
            <dd class="col-sm-9">@Model.Book?.Title</dd>

            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.User?.Name</dd>

            <dt class="col-sm-3">Rating</dt>
            <dd class="col-sm-9">
                <span class="badge bg-warning text-dark">
                    @Model.Rating <i class="fas fa-star"></i>
                </span>
            </dd>

            <dt class="col-sm-3">Comment</dt>
            <dd class="col-sm-9">@Model.Comment</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdReview" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Delete Review
                </button>
            </div>
        </form>
    </div>
</div>